# EditorConfig is awesome: https://editorconfig.org

##########################################
# Common Settings
##########################################

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
end_of_line = lf

##########################################
# File Extension Settings
##########################################

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 88

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.{json,json5,webmanifest}]
indent_size = 2

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf

# Markdown files
[*.{markdown,md, mdx}]
insert_final_newline = false
trim_trailing_whitespace = false

# Shell script files
[*.sh]
indent_size = 2

[Makefile]
indent_size = 8
indent_style = tab
